/*  As maçãs custam R$ 0,30 se forem compradas menos do que uma dúzia, eR$0,25se
 forem compradas pelo menos doze. Escreva um algoritmo que leia o número de maçãs
 compradas, calcule e escreva o valor total da compra. */

 function nMacas(macas){
  if (macas < 12){
  console.log(macas + " maçãs foram compradas e o valor a ser pago é R$" + macas* 0.30)
}
  if (macas >= 12){
    console.log(macas + " maçãs foram compradas e o valor a ser pago é R$" + macas* 0.25)
  }
}

nMacas(10)
nMacas(12)
