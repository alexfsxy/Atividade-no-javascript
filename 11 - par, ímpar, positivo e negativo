const prompt = require('prompt-sync')()

let numero = parseInt(prompt("Insira o número:"))

if(numero % 2 === 0){
    console.log("O número é par.");
} else {
    console.log("O número é ímpar.");
} if (numero > 0) {
    console.log("O número é positivo");
  } else if (numero < 0) {
    console.log("O número é negativo");
}
